<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="gitter.privacy.gitlegit.MainActivity">

    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageViewMainPort"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@drawable/homesweethome"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="163dp"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageJohnDoeMainPort"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@drawable/chara"/>
        </LinearLayout>
        <!--Story Container -->
        <LinearLayout
            android:id="@+id/storyContainer"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_margin="2dp"
            android:background="@drawable/black_border_white_background"
            android:layout_gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/storyTeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textSize="15sp"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp" />

            <TextView
                android:id="@+id/storyText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:padding="3dp"
                android:gravity="center"
                android:maxLines="3"/>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>